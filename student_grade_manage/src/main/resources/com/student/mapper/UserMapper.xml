<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.student.mapper.UserMapper">


    <resultMap id="userResultMap" type="com.student.domain.User">
        <id property="id" column="id"/>
        <result property="username" column="username"/>
        <result property="password" column="password"/>
        <result property="sex" column="sex"/>
        <result property="age" column="age"/>
        <result property="address" column="address"/>
        <result property="tel" column="tel"/>
        <result property="post" column="post"/>
    </resultMap>
    <insert id="addUser">
        insert into tb_user (id, username, password, sex, age, address, tel, post)
        values (#{id},#{username},#{password},#{sex},#{age},#{address},#{tel},#{post});
    </insert>
    <update id="updateUser">
        update tb_user
        <set>
            <if test="username!=null and username!=''">
                username = #{username},
            </if>
            <if test="password!=null and password!=''">
                username = #{password},
            </if>
            <if test="sex!=null and sex!=''">
                sex = #{sex},
            </if>
            <if test="age!=null and age!=''">
                age = #{age},
            </if>
            <if test="address!=null and address!=''">
                address = #{address},
            </if>
            <if test="tel!=null and tel!=''">
                tel = #{tel},
            </if>
            <if test="post!=null and post!=''">
                post = #{post},
            </if>
        </set>
        where id = #{id};
    </update>
    <delete id="deleteUser">
        delete
        from tb_user
        where id = #{id};
    </delete>


    <select id="selectAllUsers" resultMap="userResultMap">
        select * from tb_user;
    </select>

    <select id="selectByUsernameUser" resultMap="userResultMap">
        select *
        from tb_user where username = #{username};
    </select>
    <select id="selectUserById" resultMap="userResultMap">
        select *
        from tb_user where id = #{id};
    </select>


</mapper>